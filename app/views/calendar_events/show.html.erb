<p>
  <strong>Date:</strong>
  <%= @calendar_event.date %>
</p>

<p>
  <strong>Time slot:</strong>
  <%= @calendar_event.time_slot %>
</p>

<p>
  <strong>Weather:</strong>
  <%= @calendar_event.weather %>
</p>

<p>
  <strong>Weather modifier:</strong>
  <%= @calendar_event.weather_modifier %>
</p>

<p>
  <strong>Events:</strong>
  <%= @calendar_event.events %>
</p>

<p>
  <strong>Event requirements:</strong>
  <%= @calendar_event.event_requirements %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @calendar_event.notes %>
