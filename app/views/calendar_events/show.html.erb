<table>
  <tr>
    <th>Confidant</th>
    <th>Location</th>
    <th>Notes</th>
  </tr>
  <% @calendar_event.confidant_availability_events.each do |confidant_event| %>
  <tr>
    <td><%= confidant_event.confidant %></td>
    <td><%= confidant_event.location %></td>
    <td><%= confidant_event.notes %>
  </tr>
  <% end %>
</table>

