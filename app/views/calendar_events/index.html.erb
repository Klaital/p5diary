<p id="notice"><%= notice %></p>

<h1>Calendar Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time slot</th>
      <th>Weather</th>
      <th>Weather modifier</th>
      <th>Events</th>
      <th>Event requirements</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendar_events.each do |calendar_event| %>
      <tr>
        <td><%= calendar_event.date %></td>
        <td><%= calendar_event.time_slot %></td>
        <td><%= calendar_event.weather %></td>
        <td><%= calendar_event.weather_modifier %></td>
        <td><%= calendar_event.events %></td>
        <td><%= calendar_event.event_requirements %></td>
        <td><%= calendar_event.notes %></td>
        <td><%= link_to 'Show', calendar_event %></td>
        <td><%= link_to 'Edit', edit_calendar_event_path(calendar_event) %></td>
        <td><%= link_to 'Destroy', calendar_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

